<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/itemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="17sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/activityNameType"
            android:text="dasaffghgmhd"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#d2555f"
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/calorieEffect"
            android:text="sdlkfnkkö"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:alpha="0.6"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/activityDuration"
            android:text="sdflkşcxvxb"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CAC9CF"
        android:layout_marginLeft="2dp"
        android:alpha="0.8"/>

</LinearLayout>